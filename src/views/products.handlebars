<div class="container bg-secondary-subtle">
  <h2 class="py-3 px-5 text-primary-emphasis">Movie Catalog</h2>
  {{#each products}}
    <div class="card mb-3 text-primary-emphasis bg-primary-subtle" style="max-width: 600px;">
      <div class="row g-0">
        <div class="col-md-4 p-3">
          <img src={{this.thumbnail}} class="img-fluid rounded m3" alt="..." />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4 class="card-title">{{this.title}}</h4>
            <h5 class="card-title py-1">{{this.category}}</h5>
            <p class="card-text">{{this.description}}</p>
            <div class="d-flex justify-content-around">
              <p class="card-text text-body-secondary">${{this.price}}</p>
              <button type="button" class="btn btn-outline-primary btn-sm">Add to Cart</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>